@model MyPortfolioWebApp.Models.ViewModels.LoginViewModel

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">


<div class="col">
    <div class="collapse float-right" id="LoginPanel">
        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()

            <div class="input-group">
                <input type="text" class="form-control" style="margin-right: 0.5em; max-width: 200px;" placeholder="UserName" name="UserName" id="login" [value]="UserName" />
                <input type="password" class="form-control" style="max-width: 200px; margin-right: 5px;" placeholder="Password" name="Password" id="Password" />
                <div class="form-group">
                    <div style="color: white; margin-right: 1em;">
                            @Html.CheckBoxFor(m => m.RememberMe)
                            @Html.LabelFor(m => m.RememberMe)
                        </div>
                </div>
                <span class="">
                    <input type="submit" class="btn btn-success" value="Zaloguj"/>
                </span>
            </div>
            <a href="@Url.Action("Register", "Account")" style="margin-top: 0.5em; margin-left: 2em;" class="btn-sm btn-link float-sm-right" role="button">Utwórz konto</a>
            <div id="informacje" class="text-right" style="margin-top: 0.5em; font-size: 2em; color: red;">
            </div>
        }
    </div>
</div>








